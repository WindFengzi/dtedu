<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_ACTION"
    android:layout_width="fill_parent"
    android:layout_height="56dp"
    android:paddingBottom="4dip"
    android:paddingLeft="4dp"
    android:paddingRight="4dp" >

<TextView
    android:id="@+id/notice_id"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/btn_save_sel"
    android:layout_toLeftOf="@+id/btn_save_sel"
    android:text="fpr_id"
    android:visibility="invisible" />

<TextView
    android:id="@+id/notice_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/title_right"
    android:paddingLeft="2dp"
    android:text="list_item_title"
    android:textColor="@color/black"
    android:textSize="@dimen/text_size_14" />

<TextView
    android:id="@+id/tx_check_status"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignRight="@+id/notice_body"
    android:text="-"
    android:textColor="@color/dark_gray"
    android:textSize="@dimen/text_size_14" />

<TextView
    android:id="@+id/title_right"
    android:layout_width="12dp"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/btn_save_sel"
    android:layout_alignRight="@+id/btn_save_sel"
    android:text="node"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:textColor="@color/darkcyan"
    android:visibility="invisible" />

<ImageView
    android:id="@+id/btn_save_sel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:paddingTop="8dp"
    android:src="@drawable/list_logo"
    android:visibility="visible" />

<TextView
    android:id="@+id/notice_body"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/notice_title"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/notice_title"
    android:paddingLeft="2dp"
    android:text="list_item_sub"
    android:textColor="@color/dark_gray"
    android:textSize="@dimen/text_size_14"
    android:visibility="visible" />
  
</RelativeLayout>  